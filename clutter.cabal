name:           clutter
version:        0.0.1
build-type:     Configure
hs-source-dirs: src

build-depends:
  base >= 4

exposed-modules:
  Clutter
  Clutter.Actor
  Clutter.Color
  Clutter.Event
  Clutter.Init
  Clutter.Stage
  Clutter.Utils
  Cogl
  Cogl.Color

extensions:
  ForeignFunctionInterface
  DeriveDataTypeable

GHC-options:
  -O2 -Wall

